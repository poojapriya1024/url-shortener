<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container mt-2">
    <h1>URL Shortener</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">

        <!-- <label for="orgUrl" class="sr-only">URl</label> -->
        <input required type="url" placeholder="URL" name="orgUrl" id="orgUrl" class="form-control col mr-2">
        <button type="submit" class = "btn btn-success mt-2">Shrink</button>
    </form>


    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(url => { %>
                <tr>
                    <td><a href="<%= url.full %>"><%= url.full %></a></td>
                    <td><a href="<%= url.short %>"><%= url.short %></a></td>
                    <td><%= url.clicks %></td>
                </tr>
            <% }) %>
            
        </tbody>
    </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>